<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_width="fill_parent" android:text="Username:"></TextView>
    <EditText android:singleLine="true" android:layout_height="wrap_content" android:id="@+id/username" android:layout_width="fill_parent"></EditText>
    <TextView android:layout_height="wrap_content" android:id="@+id/TextView01" android:layout_width="fill_parent" android:text="Password:"></TextView>
    <EditText android:singleLine="true" android:layout_height="wrap_content" android:id="@+id/password" android:layout_width="fill_parent" android:password="true"></EditText>
    <Button android:id="@+id/go_button" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Go!"></Button>
    <TextView android:layout_height="wrap_content" android:id="@+id/result" android:layout_width="fill_parent" android:maxLines="10" android:scrollbars="vertical"></TextView>
    <ScrollView android:id="@+id/ScrollView01" android:layout_width="fill_parent" android:layout_height="300px">
    	<TextView android:layout_height="wrap_content" android:id="@+id/txtOut" android:layout_width="wrap_content"></TextView>
	</ScrollView>
</LinearLayout>